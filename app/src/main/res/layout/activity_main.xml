<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="@drawable/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="60"
        android:layout_margin="10dp"
        android:background="@drawable/baseball"
        android:id="@+id/scroll_view">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#645353"
            android:textSize="25sp"
            android:textStyle="bold"
            android:background="#4DFFFFFF"
            android:id="@+id/result_text_view"/>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="16"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_margin="10dp"
        android:gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:background="@drawable/ball"
            android:textSize="70sp"
            android:gravity="center"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:id="@+id/input_text_0"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:background="@drawable/ball"
            android:textSize="70sp"
            android:gravity="center"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:id="@+id/input_text_1"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:background="@drawable/ball"
            android:textSize="70sp"
            android:gravity="center"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:id="@+id/input_text_2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_margin="5dp"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#9D8C8C"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:orientation="horizontal"
        android:weightSum="120"
        android:layout_margin="5dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="1"
            android:background="@drawable/num_button_select"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="35sp"
            android:id="@+id/num_button_1"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="2"
            android:background="@drawable/num_button_select"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="35sp"
            android:id="@+id/num_button_2"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="3"
            android:background="@drawable/num_button_select"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="35sp"
            android:id="@+id/num_button_3"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="4"
            android:background="@drawable/num_button_select"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="35sp"
            android:id="@+id/num_button_4"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="5"
            android:background="@drawable/num_button_select"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="35sp"
            android:id="@+id/num_button_5"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:background="@drawable/num_button_select"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="35sp"
            android:id="@+id/back_space_button"
            android:src="@drawable/ic_backspace_black_24dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:orientation="horizontal"
        android:weightSum="120"
        android:layout_margin="5dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="6"
            android:background="@drawable/num_button_select"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="35sp"
            android:id="@+id/num_button_6"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="7"
            android:background="@drawable/num_button_select"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="35sp"
            android:id="@+id/num_button_7"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="8"
            android:background="@drawable/num_button_select"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="35sp"
            android:id="@+id/num_button_8"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="9"
            android:background="@drawable/num_button_select"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="35sp"
            android:id="@+id/num_button_9"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="0"
            android:background="@drawable/num_button_select"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="35sp"
            android:id="@+id/num_button_0"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:background="@drawable/num_button_select"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="35sp"
            android:id="@+id/hit_button"
            android:src="@drawable/hit"
            android:scaleType="centerInside"/>

    </LinearLayout>


</LinearLayout>